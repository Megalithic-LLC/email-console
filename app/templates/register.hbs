<BsModal @size="lg" @fade={{false}} @backdropClose={{false}} @onHide={{false}} @onSubmit={{action "register" model}} as |Modal|>
  <Modal.header>
    <h4 class="modal-title">Register</h4>
  </Modal.header>
  <Modal.body>
    <BsForm @onSubmit={{action "register" model}} as |form|>
    
      <form.group class="row">
        <label for="first" class="col-sm-2 col-form-label">First name</label>
        <div class="col-sm-10">
          {{input id="first" placeholder="Enter first name" value=model.first autocomplete="on" autocorrect="off" autocapitalize="off" spellcheck="false"}}
        </div>
      </form.group>
      
      <form.group class="row">
        <label for="last" class="col-sm-2 col-form-label">Last name</label>
        <div class="col-sm-10">
          {{input id="last" placeholder="Enter last name" value=model.last autocomplete="on" autocorrect="off" autocapitalize="off" spellcheck="false"}}
        </div>
      </form.group>
      
      <form.group class="row">
        <label for="email" class="col-sm-2 col-form-label">Email address</label>
        <div class="col-sm-10">
          {{input id="email" placeholder="Enter email address" value=model.email autocomplete="on" autocorrect="off" autocapitalize="off" spellcheck="false"}}
        </div>
      </form.group>
      
      <form.group class="row">
        <label for="username" class="col-sm-2 col-form-label">Username</label>
        <div class="col-sm-10">
          {{input id="username" placeholder="Enter Username" value=model.username autocomplete="on" autocorrect="off" autocapitalize="off" spellcheck="false"}}
        </div>
      </form.group>
      
      <form.group class="row">
        <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          {{input id="password" placeholder="Enter Password" type="password" value=model.password}}
        </div>
      </form.group>
      
      <form.group>
        <button type="submit" class="btn btn-primary">Register</button>
      </form.group>
      
    </BsForm>
  </Modal.body>
  
  <Modal.footer>
    <p>Already have an account? Click {{#link-to "login"}}here{{/link-to}} to login.</p>
  </Modal.footer>
  
</BsModal>
